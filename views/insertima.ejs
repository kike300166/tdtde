    </select>

    <select name="producto_id" required>
        <option value="">--Seleccione--</option>
        <% if (producto) { %>
            <% for (let i = 0; i < producto.length; i++){  %>
                <% if (producto) { %>
                    <option value="<%= producto[i].id %>" id="producto_id" name="producto_id" required><%= producto[i].name %></option>
                <% } %>
            <% } %>
        <% } else { %>
                    <option value="">No existen productos en el sistema</option>
            <% }   %>
    </select>
